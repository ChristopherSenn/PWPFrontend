{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error",
            {
                "endOfLine": "auto",
                "singleQuote": true
            }],
        "semi": ["error", "always",  { "omitLastInOneLineBlock": true }],
        "no-multiple-empty-lines": [
            "error",
            { 
                "max": 2,
                "maxEOF": 1,
                "maxBOF": 0
            }
        ]
    }
}