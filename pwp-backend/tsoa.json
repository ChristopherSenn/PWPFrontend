{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*controller.ts"],
  "spec": { 
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header"
      }
    },
    "outputDirectory": "src",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "src/middleware/auth.ts"
  }
}
